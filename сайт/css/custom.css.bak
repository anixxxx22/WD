/* запросы mobile first */
/* стили для любой ширины */
.header {
	padding: 30px 0 20px 0;
	background-image: url(../imgs/g.webp);
	background-size: cover;
}
.logo {
	font-weight: 600;
	color: rgba(135, 206, 250);
	background-color: black;
	position: fixed;
	top: 0;
	right: 0;
	padding-left: 1px;
	z-index: 100;
	font-size: 8px;
}
.logo1 {
	font-weight: 600;
	color: rgba(135, 206, 250);
	position: fixed;
	top: 0;
	right: 0;
	padding-left: 1px;
	z-index: 100;
	font-size: 8px;
}
.nav {
	text-align: right;
}
.nav .button {
	width: 48%;
	margin: 2px 0;
}
.button {
	background-color: rgba(255,255,255,.5);
}
.button:hover {
	background-color: rgba(255,255,255,.3);
}
.action {
	text-align: center;
	padding-top: 37px;
}
.action h1 {
	margin: 0;
	color: rgba(224, 255, 255);
	font-size: 3rem;
}
.action h2 {
	margin: 0 0 20px 0;
	font-size: 2.5rem;
}
